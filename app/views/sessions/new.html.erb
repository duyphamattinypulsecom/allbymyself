<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <p>Please enter your login detail</p>
        <div class="signup-form">
          <%= form_for @user || User.new, url: sessions_path, method: 'post' do |f| %>
            <div class="form-group">
              <%= f.text_field 'email', class: 'form-control', placeholder: 'your e-mail' %>
            </div>
             <div class="form-group">
               <%= f.password_field 'password', class: 'form-control', placeholder: 'password' %>
            </div>
            <% if @user && @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% @user.errors.full_messages.each do |err| %>
                    <li>
                      <strong><%= err %></strong>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
                <%= f.submit 'sign in', class: 'btn btn-block btn-success' %>
            </div>    
          <% end %>
        </div> 
    </div>
</div>
